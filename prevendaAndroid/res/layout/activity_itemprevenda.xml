<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/borde_baseblanco"
        android:baselineAligned="true" >

        <TextView
            android:id="@+id/tvProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2sp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Código:"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:typeface="monospace" />

        <EditText
            android:id="@+id/etProduto"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold">
             	 <requestFocus />
   		</EditText>

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2sp"
            android:layout_weight="2"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Descrição"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />
        
        
        
        

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginBottom="1dp"
        android:baselineAligned="true"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tvQuantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Quant."
            android:layout_marginRight="180dp"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace" />
        
        
     </LinearLayout>
     
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="bottom|right"
        android:layout_marginBottom="1dp"
        android:baselineAligned="true"
        android:orientation="horizontal" >
        
        <Button
        	android:id="@+id/btnRestar"
        	android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:background="#000000"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif" />
        
        <EditText
            android:id="@+id/etQuantidade"
            android:layout_width="50dp"
            android:background="@drawable/shapetextview2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
         
        <Button
            android:id="@+id/btnSumar"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            
            android:layout_margin="3dp"
            android:background="#000000"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold"
            android:typeface="serif" />
        
        <Button
            android:id="@+id/btnConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:background="@drawable/shapebutton"
            android:layout_marginRight="5dp"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Confirmar"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif" 
             />
        
     </LinearLayout>
     
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="#f0f0eb"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/borde_padron"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:baselineAligned="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bot7"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="7"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot8"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="1dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="8"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot9"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="9"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1sp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bot4"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot5"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot6"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bot1"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot2"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/bot3"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="#000000"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:shadowColor="#FF8800"
                    android:shadowDx="1"
                    android:shadowDy="2"
                    android:shadowRadius="1.5"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/borde_padron"
            android:orientation="vertical" >

            <Button
                android:id="@+id/botApagar"
                android:layout_width="80dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                android:background="#000000"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:shadowColor="#FF8800"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="&lt;--"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/botEnter"
                android:layout_width="80dp"
                android:layout_height="106dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="1dp"
                android:background="#000000"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:shadowColor="#FF8800"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Ent"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="174dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/borde_baseblanco"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvAdicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Adicionar"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/etAdicionar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:text="" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="173dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/borde_baseblanco"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvRemover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:shadowColor="#FFFFFF"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Remover"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="monospace" />

            <EditText
                android:id="@+id/etRemover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:enabled="false"
                android:inputType="textMultiLine"
                android:text="" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/borde_padron"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bot0"
                android:layout_width="353dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="#000000"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:shadowColor="#FF8800"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

           
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >
            
            <Button
                android:id="@+id/botRetornar"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shapebutton"
                android:layout_marginTop="1dp"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:shadowColor="#FF8800"
                android:shadowDx="1"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="Retornar"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>