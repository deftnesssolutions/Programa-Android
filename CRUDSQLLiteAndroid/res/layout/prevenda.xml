<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">
   
   <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3ca8cc"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:text="Vendedor:"
            android:textColor="#fffde5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvVendedor"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Muestra el Nombre"
            android:textColor="#fffde5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:text="Data/Hora: "		
            android:textColor="#fffde5"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Muestra Data"
            android:textColor="#fffde5"
            android:textSize="12sp" />
    </LinearLayout>
	<LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cartão/Mesa:"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Não Definido"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btncartao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shapebutton"
            android:shadowColor="#FF8800"
            android:text="Mesa"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="serif" />
        
        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Cliente:"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCliente"
            android:layout_weight="1"
            android:layout_height="wrap_content"
     		android:layout_width="wrap_content"
            android:text="Não Definido"
            android:textColor="#FF8800"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConsumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shapebutton"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:text="Novo Consumo"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="serif" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvOrdem"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Nº"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCodigo"
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Código"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tvDescricao"
            android:layout_weight="1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Descrição"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Quant."
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnitario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Unit."
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Total"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSituacao"
           android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Canc."
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>
    <ListView
		android:id="@+id/lvConsumo"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1" >
	</ListView>
	<LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:layout_marginBottom="5sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.63"
            android:background="@drawable/shapebutton"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Sair"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Cancelar Item"
            android:background="@drawable/shapebutton"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="10dp"
            android:text="Total Consumo: "
            android:textColor="#103200"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:text="R$ 0,00"
            android:textColor="#fe0000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>