<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical">
      <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="1sp"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvId"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="ID"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDescricao" 
            android:layout_weight="1"
            android:layout_gravity="center_vertical"  
            android:width="130dip"        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Descrição"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnidade"
            android:layout_gravity="center_vertical"
            android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Unid"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPreco"
            android:layout_gravity="center_vertical"
            android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Preço"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />
		
        <TextView
            android:id="@+id/tvCodBarra"
            android:layout_gravity="center_vertical"
            android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Barra"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tvRp"
            android:width="60dip"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Req. Produção"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPa"
             
            android:layout_gravity="right"
            android:width="60dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perm. Alterar"
            android:textColor="#103200"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

   
        
		<LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.41"       
        android:baselineAligned="true"
        android:background="@drawable/borde_personal"
        android:orientation="horizontal" >

			<ListView
			    android:id="@android:id/list"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1" >
			</ListView>

       	</LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1sp"
        android:background="#f0f0eb"
        android:baselineAligned="true"
        android:layout_marginBottom="5sp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnAdd"
            android:onClick="btnAdd_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.63"
            android:background="@drawable/shapebutton"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/btnVoltar"
            android:onClick="btnVoltar_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Voltar"
            android:background="@drawable/shapebutton"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:shadowColor="#FF8800"
            android:shadowDx="1"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

</LinearLayout>