<?xml version="1.0" encoding="utf-8"?>
<br.com.crudsqlliteandroid.UTIL.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llconsumo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_filas"
        android:orientation="horizontal" >
   		
    	<TextView
    	    android:id="@+id/txtId"
    	    android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="ID" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtDescricao"
    	    android:layout_weight="1" 
            android:width="160dip"        
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Descricão" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtUnidade"
    	    android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Unid." >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtPreco"
    	    android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Preço" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtCodBarra"
    	    android:width="50dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Barra" >
    	</TextView>
    	
    	
    	
    	<TextView
    	    android:id="@+id/txtReqProducao"
    	    android:width="60dip"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="RP" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtPerAlterar"
    	    android:layout_gravity="right"
            android:width="60dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="PA" >
    	</TextView>

	</br.com.crudsqlliteandroid.UTIL.CheckedLinearLayout>