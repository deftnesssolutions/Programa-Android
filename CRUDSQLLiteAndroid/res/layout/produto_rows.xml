<?xml version="1.0" encoding="utf-8"?>
<br.com.crudsqlliteandroid.UTIL.CheckedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/llconsumo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/selector_filas"
        android:orientation="horizontal" >
   		
    	<TextView
    	    android:id="@+id/txtId"
    	    android:layout_width="30dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="5dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="ID" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtDescricao"
    	    
    	    android:layout_width="200dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Descricão" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtUnidade"
    	    android:layout_width="60dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Unidade" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtPreco"
    	    android:layout_width="50dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="10dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Preço" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtCodBarra"
    	    
    	    android:layout_width="80dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="Barra" >
    	</TextView>
    	
    	
    	
    	<TextView
    	    android:id="@+id/txtReqProducao"
    	    
    	    android:layout_width="30dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="4dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="RP" >
    	</TextView>
    	
    	<TextView
    	    android:id="@+id/txtPerAlterar"
    	    
    	    android:layout_width="30dp"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="2dp"
    	    android:textSize="15sp"
            android:textStyle="bold"
    	    android:text="PA" >
    	</TextView>

	</br.com.crudsqlliteandroid.UTIL.CheckedLinearLayout>